<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/list_margin_layout"
        android:layout_weight="0.2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/groupContentCreatingMainVerb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/list_margin_word"
            android:layout_marginTop="@dimen/list_margin_word"
            android:layout_weight="0.9"
            android:gravity="center"
            android:textColor="@color/BLACK_SOFT"
            android:text="TextView"
            android:textSize="@dimen/list_view_main_word" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/groupContentCreatingFirstForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/BLACK_SOFT"

                android:textSize="@dimen/list_view_second_words" />

            <TextView
                android:id="@+id/groupContentCreatingSecondForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/BLACK_SOFT"

                android:textSize="@dimen/list_view_second_words" />

            <TextView
                android:id="@+id/groupContentCreatingThirdForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/BLACK_SOFT"
                android:textSize="@dimen/list_view_second_words" />

        </LinearLayout>

    </LinearLayout>

    <CheckBox
        android:id="@+id/groupCreatingCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:clickable="false"
        android:focusable="false"/>

</LinearLayout>